@model IEnumerable<NCS.Models.Connection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h2>Connections</h2>
            </div>
            <div class="col-2">
                <p class="float-right">
                    @Html.ActionLink("Create New", "Create", new { @area = "" }, new { @class = "btn btn-light" })
                </p>
            </div>
        </div>
        <hr />
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Added By
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConnectionName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.ConnectionName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>