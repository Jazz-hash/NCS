@model IEnumerable<NCS.Models.PaymentDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h2>Bill Details</h2>
            </div>
            <div class="col-2">
                <p>
                    @Html.ActionLink("Create New", "Create", new { @area = "" }, new { @class = "btn btn-light float-right" })
                </p>

            </div>
        </div>

      
        <table class="table table-hover table-bordered">
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail.CustomerId)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDetail.Customer.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>